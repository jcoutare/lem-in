#include "libft.h"

void	ft_list_reverse(t_list **begin_list)
{
	t_list *next;
	t_list *prev;

	prev = NULL;
	while (*begin_list)
	{
		next = (*begin_list)->next;
		(*begin_list)->next = prev;
		prev = *begin_list;
		*begin_list = next;
	}
	*begin_list = prev;
}
